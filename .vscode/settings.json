{
	"editor.insertSpaces": true,
	"editor.rulers": [80, 120],
	"editor.tabSize": 4,
	"editor.wordWrap": "on",

	"files.exclude": {
		".hidden": true,
		"*.code-workspace": true,
		"**/.gitignore": true,
		"**/.vscode": true,
		"gnome.php": true,
		"sync.sh": true,
	},
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	"search.exclude": {
	},
}
